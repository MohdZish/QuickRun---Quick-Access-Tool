                        <TextBlock Text="Dashboard" FontSize="12" Canvas.Top="10" Height="30" Width="89" Canvas.Left="36"/>
                    </Canvas>
                </Button>
            </Grid>
            <StackPanel>
                <Grid >
                    <Button Click="AddNew" VerticalAlignment="Top" Margin="26,0,212.333,0" BorderThickness="0"  Height="30" Background="#4c32a8" Foreground="White" BorderBrush="#FF37F3AE" Style="{DynamicResource RoundedButtonStyle}">
