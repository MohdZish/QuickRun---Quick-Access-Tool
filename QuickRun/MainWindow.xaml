                            <TextBlock Text="Edit" Foreground="Black" Canvas.Left="35" Canvas.Top="4" />
                        </Canvas>
                    </Button>
                    <Button x:Name="buttondelete" VerticalAlignment="Top" Margin="207,0,30,0" BorderThickness="1.5"  Height="30" Background="#faf9f7" Foreground="Black" BorderBrush="#e3e3e3" Style="{DynamicResource RoundedButtonStyle}">
                        <Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  Width="76" Height="76" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                            <Path Width="16.667" Height="13.888" Canvas.Top="6.056" Stretch="Fill" Fill="Black" Data="F1 M 53.2929,21.2929L 54.7071,22.7071C 56.4645,24.4645 56.4645,27.3137 54.7071,29.0711L 52.2323,31.5459L 44.4541,23.7677L 46.9289,21.2929C 48.6863,19.5355 51.5355,19.5355 53.2929,21.2929 Z M 31.7262,52.052L 23.948,44.2738L 43.0399,25.182L 50.818,32.9601L 31.7262,52.052 Z M 23.2409,47.1023L 28.8977,52.7591L 21.0463,54.9537L 23.2409,47.1023 Z " Canvas.Left="4.667"/>
                            <TextBlock Text="Delete" Foreground="Black" Canvas.Left="31" Canvas.Top="4" />
                        </Canvas>
                    </Button>

                    <Button x:Name="miniapp" Click="OpenMini" VerticalAlignment="Top" Margin="298,1,-61,-1" BorderThickness="1.5"  Height="30" Background="#faf9f7" Foreground="Black" BorderBrush="#e3e3e3" Style="{DynamicResource RoundedButtonStyle}">
                        <Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  Width="76" Height="76" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
                            <Path Width="16.667" Height="13.888" Canvas.Top="6.056" Stretch="Fill" Fill="Black" Data="F1 M 53.2929,21.2929L 54.7071,22.7071C 56.4645,24.4645 56.4645,27.3137 54.7071,29.0711L 52.2323,31.5459L 44.4541,23.7677L 46.9289,21.2929C 48.6863,19.5355 51.5355,19.5355 53.2929,21.2929 Z M 31.7262,52.052L 23.948,44.2738L 43.0399,25.182L 50.818,32.9601L 31.7262,52.052 Z M 23.2409,47.1023L 28.8977,52.7591L 21.0463,54.9537L 23.2409,47.1023 Z " Canvas.Left="4.667"/>
                            <TextBlock Text="Mini" Foreground="Black" Canvas.Left="37" Canvas.Top="5" />
                        </Canvas>
                    </Button>


                </Grid>
                <Separator Background="#e3e3e3" Width="250" Margin="0 10 0 0"/>
                <Grid>
                    <WrapPanel Name="MyPanel" Margin="10 10 0 0" Background="#0011131B" Height="280" Width="300" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
                    <Frame x:Name="AddNewPanel" Margin="10 10 0 0" Height="280" Width="300" NavigationUIVisibility="Hidden"/>

                </Grid>

            </StackPanel>

            <Grid>
                <Separator Height="300px" Background="#e3e3e3" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />

            </Grid>

        </StackPanel>

    </StackPanel>

</Window>
